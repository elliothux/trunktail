{
  "name": "trunktail",
  "scripts": {
    "dev": "bun run --cwd apps/trunktail dev",
    "dev:tauri": "bun run --cwd apps/trunktail dev:tauri",
    "dev:docs": "bun run --cwd apps/docs dev",
    "build": "bun run --cwd apps/trunktail build",
